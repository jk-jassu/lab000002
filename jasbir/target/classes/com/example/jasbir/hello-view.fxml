<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/21" fx:controller="com.example.jasbir.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <Button text="Fetch Data" onAction="#onViewDataButtonClick"/>

    <TableView fx:id="tableView">
      <columns>
         <TableColumn prefWidth="75.0" text="game" />
         <TableColumn prefWidth="75.0" text="hobby" />
         <TableColumn prefWidth="75.0" text="movie" />
      </columns></TableView>


    <Button onAction="#onInsertButtonClick" text="Insert" />
    <Button onAction="#onUpdateButtonClick" text="Update" />
    <Button onAction="#onDeleteButtonClick" text="Delete" />
    <Button onAction="#onViewDataButtonClick" text="View Data" />
</VBox>
